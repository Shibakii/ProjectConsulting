<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ui.autoevaluar.Autoevaluar"
    android:id="@+id/autoevaluar_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/profile"
            android:padding="5dp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_marginTop="7.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nom alumne"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="7.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:hint="Correo electronico" />

            <TextView
                android:layout_marginTop="7.5dp"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Informacio" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="left
">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:hint="Curs"
                android:textStyle="bold"
                android:layout_marginTop="7.5dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/greenTitle"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/borders"
        android:layout_marginBottom="10dp">

        <Spinner
            android:id="@+id/spinnerGrupos"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/borders">

        <Spinner
            android:id="@+id/spinnersListaSkills"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LinearBotones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="8dp">

            <Button
                android:id="@+id/Frase"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="250sp"
                android:layout_height="100dp"
                android:backgroundTint="@color/F"
                android:text="F"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="45dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <Button
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="220sp"
                android:layout_height="100dp"
                android:backgroundTint="@color/R"
                android:text="R"
                android:textStyle="bold"
                android:textSize="45dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <Button
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="230sp"
                android:layout_height="100dp"
                android:backgroundTint="@color/A"
                android:text="A"
                android:textStyle="bold"
                android:textSize="45dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <Button
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="300sp"
                android:layout_height="100dp"
                android:backgroundTint="@color/S"
                android:text="S"
                android:textStyle="bold"
                android:textSize="45dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <Button
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="220sp"
                android:layout_height="100dp"
                android:backgroundTint="@color/E"
                android:text="E"
                android:textStyle="bold"
                android:textSize="45dp"
                android:textAlignment="textStart"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >

            <ImageButton
                android:id="@+id/consultarStats"
                android:layout_width="match_parent"
                android:layout_height="525dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/grafico"
                android:scaleType="centerInside"
                android:backgroundTint="@color/background"
                />

        </LinearLayout>

    </LinearLayout>

        <Button
            android:id="@+id/guardarCambios"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:backgroundTint="@color/light_greenTitle"
            android:text="Autoevaluar"
            />

</LinearLayout>