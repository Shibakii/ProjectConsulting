<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/profeAlumnoBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <!-- Nombre del alumno (Conectado como usuario) -->
        <TextView
            android:id="@+id/fragment_nombre_evaluar_kpi"
            android:layout_width="0dp"
            android:textSize="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre del alumno"/>

        <!-- Curso del alumno -->
        <TextView
            android:id="@+id/fragment_curso_evaluar_kpi"
            android:layout_width="0dp"
            android:textSize="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CURSO"
            android:textStyle="bold"
            android:gravity="right"/>

    </LinearLayout>

    <!-- Separador -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/greenBackground"
        android:layout_marginHorizontal="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:background="@color/light_smooth_green"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_titulo_kpi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE_SKILL"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="50dp"/>

        <!-- Separador -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/greenBackground"
            android:layout_marginHorizontal="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>