<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Cambiar color de fondo -->
    <LinearLayout
        android:id="@+id/item_list_backgroundStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greenTitle"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Imagen del alumno / profesor -->
        <ImageView
            android:id="@+id/item_list_imgStudent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile"
            android:background="@color/white"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Nombre del alumno -->
            <TextView
                android:id="@+id/item_list_nameStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:text="Nombre alumno / profesor"/>

            <!-- Correo del alumno -->
            <TextView
                android:id="@+id/item_list_mailStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:text="Correu"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>