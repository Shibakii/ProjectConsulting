<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@color/background"
    android:id="@+id/login_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="230dp"
            android:padding="10dp"
            android:layout_gravity="left"
            android:src="@drawable/icono_hasta_que_haya_otro"/>

        <ImageButton
            android:id="@+id/login_infoButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="center"
            android:src="@drawable/infobutton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="33dp"
            android:layout_gravity="left"
            android:src="@drawable/imagen_redondeada"/>

        <EditText
            android:singleLine="true"
            android:id="@+id/usuario"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="0.40"
            android:background="@drawable/borders"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:hint="Usuari"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:singleLine="true"
            android:id="@+id/contrasenya"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="0.40"
            android:hint="Contrasenya"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/borders"
            android:layout_gravity="center_horizontal"/>

        <CheckBox
            android:id="@+id/mostrarcontrasenia"
            android:layout_width="171dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="0.35"
            android:text="Mostrar contraseÃ±a" />

        <Button
            android:id="@+id/login_loginButton"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/greenTitle"
            android:text="Login"
            android:layout_gravity="center_horizontal"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar con Google"
            android:backgroundTint="@color/black"
            android:layout_gravity="center"
            android:textColor="@color/white"

            />


        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"/>

    </LinearLayout>

</LinearLayout>