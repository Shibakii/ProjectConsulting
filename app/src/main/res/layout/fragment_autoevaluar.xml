<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ui.autoevaluar.Autoevaluar"
    android:id="@+id/autoevaluar_background">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:src="@drawable/profile"
            android:padding="5dp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/autoevaluar_nom"
                android:layout_marginTop="7.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nom alumne"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/autoevaluar_correu"
                android:layout_marginTop="7.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Correo electronico" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="left
">

            <TextView
                android:id="@+id/autoevaluar_curs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Curs"
                android:textStyle="bold"
                android:layout_marginTop="7.5dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/greenTitle"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/borders"
        android:layout_marginBottom="5dp">

        <Spinner
            android:id="@+id/spinnerGrupos"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/borders"
        android:layout_marginBottom="20dp">

        <Spinner
            android:id="@+id/spinnersListaSkills"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LinearBotones"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="8dp">


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >

            <ImageButton
                android:id="@+id/consultarStats"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@color/background"
                android:scaleType="centerInside"
                android:src="@drawable/grafico" />

        </LinearLayout>




    </LinearLayout>


</LinearLayout>