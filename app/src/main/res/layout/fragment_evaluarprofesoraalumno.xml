<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profeAlumno"
    android:background="@color/background"
    android:id="@+id/profeAlumnoBackground">


    <TextView
        android:id="@+id/Nombrealu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Alumno"

        />

    <TextView
        android:id="@+id/Grupoalu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grupo"

        />

    <Spinner
        android:id="@+id/spinnerListas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre del Alumno"

        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LinearBotones"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="8dp">


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >

            <ImageButton
                android:id="@+id/consultarStats"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/grafico"
                android:scaleType="centerInside"
                android:backgroundTint="@color/background"
                />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>