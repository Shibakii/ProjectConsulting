<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrevioEvaluarAlumnoAlumno"
    android:background="@color/background"
    android:id="@+id/previoAlumnoBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/Nombrealu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:hint="Nombre del Alumno"

            />

        <TextView
            android:id="@+id/Grupoalu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:hint="Grupo"

            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/greenBackground"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Skill a puntuar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/borders"
        android:layout_marginBottom="10dp">

        <Spinner
            android:id="@+id/spinnerListas"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:hint="Nombre del Alumno"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LinearBotones"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/consultarStats"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@color/background"
                android:scaleType="centerInside"
                android:src="@drawable/grafico" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>